# NPM configuration for Vercel deployment
# Ensure proper package resolution and installation

# Use npm ci for faster, reliable builds
# This ensures exact dependency versions from package-lock.json

# Disable package-lock updates during install
package-lock=false

# Ensure proper registry
registry=https://registry.npmjs.org/

# Enable strict peer dependencies
strict-peer-deps=false

# Use legacy peer deps for compatibility
legacy-peer-deps=true
